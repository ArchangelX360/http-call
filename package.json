{
  "name": "http-call",
  "description": "make http requests",
  "version": "4.0.5",
  "author": "Jeff Dickey @jdxcode",
  "bugs": "https://github.com/heroku/http-call/issues",
  "dependencies": {
    "content-type": "1.0.4",
    "debug": "^3.1.0",
    "is-retry-allowed": "^1.1.0",
    "is-stream": "^1.1.0",
    "tunnel-agent": "^0.6.0"
  },
  "devDependencies": {
    "@types/content-type": "1.1.2",
    "@types/is-stream": "^1.1.0",
    "@types/jest": "^21.1.8",
    "@types/nock": "^9.1.0",
    "@types/node": "^8.5.1",
    "jest": "^21.2.1",
    "nock": "^9.1.4",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.2",
    "standard": "^10.0.3",
    "ts-jest": "^21.2.4",
    "typescript": "^2.6.2"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/heroku/http-call",
  "jest": {
    "coverageReporters": [
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "keywords": [
    "http",
    "request",
    "rest"
  ],
  "license": "ISC",
  "main": "lib/http.js",
  "repository": "heroku/http-call",
  "scripts": {
    "coverage": "cat coverage/coverage-final.json | remap-istanbul -o coverage/coverage-final.json && curl -s https://codecov.io/bash | bash",
    "precommit": "lint-staged",
    "prepare": "rimraf lib && tsc && rimraf 'lib/**/*.test.js' 'lib/**/*.test.d.ts'",
    "pretest": "tsc --sourcemap",
    "test": "jest"
  },
  "types": "./lib/http.d.ts"
}
